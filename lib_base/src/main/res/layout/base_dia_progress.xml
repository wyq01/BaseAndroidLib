<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg_dialog_progress"
    android:padding="@dimen/dp_15">

    <ProgressBar
        android:id="@+id/pb"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:progress="20"
        android:max="100"
        android:indeterminateTint="@color/base_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
    <!--<ImageView-->
        <!--android:id="@+id/loadingIv"-->
        <!--android:layout_width="@dimen/dp_45"-->
        <!--android:layout_height="@dimen/dp_45"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:background="@android:color/transparent"-->
        <!--app:srcCompat="@drawable/base_anim_loading" />-->

    <TextView
        android:id="@+id/msgTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/loading_msg"
        android:textColor="@color/base_text_tip"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>