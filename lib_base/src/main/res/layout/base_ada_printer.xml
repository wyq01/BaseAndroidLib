<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:foreground="?attr/selectableItemBackground"
	android:layout_height="@dimen/dp_40"
	android:paddingLeft="@dimen/dp_15">

	<ImageView
		android:id="@+id/checkIv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/dp_15"
		android:tint="@color/base_btn_common_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/base_ic_selected" />

	<TextView
		android:id="@+id/deviceNameTv"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/dp_10"
		android:maxLines="1"
		android:textColor="@color/base_text_main"
		android:textSize="@dimen/dp_14"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/checkIv"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="设备名称" />

</android.support.constraint.ConstraintLayout>