<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSlideTheme" parent="SlideTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingItem">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="DocumentTip">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_important</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="DocumentContent">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="SamplingTip">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>
    <style name="SamplingContent">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textColorHint">@color/text_tip</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="DecisionTip">
        <item name="android:textColor">@color/text_important</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>

</resources>